@model ASP.NET_NLayerDesignStudio.BLL.DTO.ServiceDTO

@{
    ViewBag.Title = "Details";
}

<center><h3 class="header_style">@Model.Name</h3></center>
<div class="row">
    <div>
        <div class="thumbnail background_style">
            <img src=@Model.Img alt="...">
            <div class="caption">
                <h3>@Model.Name</h3>
                <p>@Model.Description</p>
                <strong>Цена(за час):</strong>
                <p>@Model.Price</p>
                <p>
                    @Html.ActionLink("Информация про мастера", "DetailsOfMaster", new { id = Model.Id }, new { @class = "btn btn-warning btn-xs" })
                    @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-danger btn-xs" })
                </p>
            </div>
        </div>
    </div>
</div>