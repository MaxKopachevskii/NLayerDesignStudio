@model IEnumerable<ASP.NET_NLayerDesignStudio.BLL.DTO.ExampleDTO>

@{
    ViewBag.Title = "Portfolio";
}

<center><h3 class="header_style">Портфолио</h3></center>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-6 col-sm-6 col-lg-6">
            <div class="thumbnail background_style">
                <img src=@item.Img alt="...">
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>@item.Desc</p>
                    <p>@Html.ActionLink("Подробнее", "DetailsExamples", new { id = item.Id }, new { @class = "btn btn-danger" })</p>
                </div>
            </div>
        </div>
    }
</div>
